{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "initializationOptions": {
        "haskell": {
          "completionSnippetsOn": false,
          "plugin": {
            "ghcide-completions": {
              "config": {
                "snippetsOn": false
              }
            }
          },
          "formattingProvider": "ormolu"
        }
      }
    },
    "java": {
      "command": "$HOME/dev/src/github.com/georgewfraser/java-language-server/dist/lang_server_mac.sh",
      "filetypes": [ "java" ]

    }
  },
  "tsserver.enableJavascript": true,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "codeLens.enable": true,
  "diagnostic.enableMessage": "jump",
  "coc.preferences.enableFloatHighlight": false
}
